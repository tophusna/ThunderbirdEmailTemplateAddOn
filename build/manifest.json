{
  "manifest_version": 2,
  "name": "Email Templates",
  "version": "1.0",
  "description": "Add predefined email templates to your replies.",
  "permissions": [
    "messagesRead",
    "messagesModify"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}